@model IEnumerable<EventifyPass.Models.Event>

@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Upcoming Events</h2>

    <div class="text-center mb-4">
       <a asp-action="Create" class="btn btn-success">+ Create New Event</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    
                    <img src="https://source.unsplash.com/600x400/?concert,event" class="card-img-top" alt="">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="text-muted mb-1"><strong>Date:</strong> @item.EventDate.ToShortDateString()</p>
                        <p class="text-muted mb-1"><strong>Time:</strong> @item.EventTime</p>
                        <p class="text-muted mb-1"><strong>Location:</strong> @item.Location</p>
                        <p class="text-muted mb-1"><strong>Category:</strong> @item.Category?.CategoryId</p>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary btn-sm">View</a>
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
